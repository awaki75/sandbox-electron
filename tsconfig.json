{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "lib": ["dom", "dom.iterable", "es2018"],
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  }
}
